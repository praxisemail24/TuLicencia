
@{
    ViewData["Title"] = "Gestor de tokens";
}

@section Styles {
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap5.min.css" rel="stylesheet" />
}

<div class="py-3">
    <div class="card">
        <div class="card-header p-3 fs-4 fw-bold d-flex flex-row align-items-center">
            <div class="" style="width: 80%;">GESTOR DE TOKENS</div>
            <div class="d-flex flex-row align-items-center justify-content-end" style="width: 20%;">
                <div class="btn-group btn-group-sm">
                    <button onclick="apiTokens.New()" type="button" class="btn btn-lg btn-success">
                        <i class="ri-add-fill"></i>
                        <span>Agregar</span>
                    </button>
                    <button onclick="apiTokens.refreshTable()" type="button" class="btn btn-lg btn-warning">
                        <span>Refrescar</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">            
            <div class="table-responsive">
                <table id="tb-tokens" class="table table-striped table-hovered">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Token</th>
                            <th>Vence</th>
                            <th>Revocado</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="modalNewToken" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear token</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-xs-12 col-md-8">
                        <div class="mb-3">
                            <label class="form-label">Usuario</label>
                            <input type="text" id="username" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Id de Usuario</label>
                            <input type="number" id="userId" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-4">
                        <div class="mb-3">
                            <label class="form-label">Fecha Vencimiento</label>
                            <input type="date" id="expiredAt" class="form-control" />
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 col-lg-4">
                        <div class="mb-3">
                            <label class="form-label">Rol</label>
                            <select id="rol" class="form-select">
                                <option value="0">-- SELECIONE --</option>
                                <option value="1">Administrador</option>
                                <option value="2">Operador</option>
                                <option value="3">Radicador</option>
                                <option value="4">Cliente</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button onclick="apiTokens.Generate()" type="button" class="btn btn-primary">Generar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
    <script src="~/js/tokens.js"></script>
    <script>
        $(document).ready(() => {
            apiTokens.loadTable();
        });
    </script>
}
