@{
    ViewData["Title"] = "Reporte de multas";
}

<div class="pt-3">
    <div class="card">
        <div class="card-header p-3 fs-4 fw-bold">REPORTE DE MULTAS</div>
        <div class="card-body">
            <div class="row gy-3">
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
                    <label class="form-label">Tipo de trámite</label>
                    <select id="tipotra" class="form-select">
                        <option value="0">-- TODOS --</option>
                        <option value="1">Renovación de licencia</option>
                        <option value="2">Reciprocidad de Licencia</option>
                        <option value="3">Licencia de aprendizaje</option>
                        <option value="4">Licencia de Reciprocidad</option>
                    </select>
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <label class="form-label">Nombre cliente</label>
                    <input class="form-control" id="cliente" placeholder="Nombre de cliente" />
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
                    <label class="form-label">Correo</label>
                    <input class="form-control" id="correo" placeholder="" />
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <label class="form-label">Teléfono</label>
                    <input class="form-control" id="phone" placeholder="" />
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <label class="form-label">Fecha</label>
                    <input class="form-control" id="fecha" placeholder="" />
                </div>
                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-2">
                    <label class="form-label">Estado</label>
                    <select id="tipo" class="form-select">
                        <option value="0">-- TODOS --</option>
                        <option value="1">Pendiente</option>
                        <option value="2">Pagado</option>
                    </select>
                </div>
                <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
                    <label class="form-label">Codigo Pago</label>
                    <input class="form-control" id="codigopago" placeholder="" />
                </div>
            </div>
            <div class="row gy-4 pt-3">
                <div class="col-xl-6">
                    <button type="button" id="btnbuscar" class="btn btn-secondary me-2">
                        <i class="la la-search"></i>
                        <span>BUSCAR</span>
                    </button>
                    @*<button type="button" id="btnexportar" class="btn btn-success me-2">
                    <i class="la la-file-excel"></i>
                    <span>EXPORTAR</span>
                    </button>*@
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="reporte" class="table table-hover ">
                    <thead>
                        <tr>
                            <th class="text-uppercase">Codigo Pago</th>
                            <th class="text-uppercase">Nombre Cliente</th>
                            <th class="text-uppercase">Tipo Trámite</th>
                            <th class="text-uppercase">Estado</th>
                            <th class="text-uppercase">Teléfono</th>
                            <th class="text-uppercase">Correo</th>
                            <th class="text-uppercase">Monto Multas ($)</th>
                            <th class="text-uppercase">Nro Cuotas</th>
                            <th class="text-uppercase">ORIGEN</th>
                            <th class="text-uppercase">Fecha</th>
                            <th class="text-uppercase">INVOICE</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css" />
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- DataTables JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <!-- Toastr CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <!-- Toastr JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script src="~/js/reporte_multas.js"></script>
}