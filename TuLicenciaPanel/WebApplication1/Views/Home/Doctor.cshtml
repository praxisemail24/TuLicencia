@using SmartLicense.Utils
@{
    ViewBag.Title = "Doctor Details";
}

@section Styles {
    <link rel="stylesheet" href="~/css/forms.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/siimple-icons/siimple-icons.css" />
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap5.min.css" rel="stylesheet" />
}

<div class="container-fluid ps-0">
    <input type="hidden" id="doctorId" value="@ViewBag.DoctorId" />

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title fw-bold">Detalles del doctor</h5>
            <div class="row">
                <div class="col-12 col-lg-6">
                    <div class="row mb-2">
                        <label class="col-lg-4 col-form-label">Doctor ID:</label>
                        <div class="col-lg-8">
                            <input readonly="readonly" value="@ViewBag.DoctorId" class="form-control-plaintext" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="row mb-2">
                        <label class="col-lg-4 col-form-label">Nombre del doctor:</label>
                        <div class="col-lg-8">
                            <input readonly="readonly" value="@ViewBag.Nombre" class="form-control-plaintext" />
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="row mb-2">
                        <label class="col-lg-4 col-form-label">Correo electrónico:</label>
                        <div class="col-lg-8">
                            <input readonly="readonly" value="@ViewBag.Email" class="form-control-plaintext" />
                        </div>
                    </div>
                </div>
            </div>
            <h5 class="card-title fw-bold">Casos asignados al doctor</h5>
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="fechaDesde">Fecha Desde:</label>
                    <input type="date" id="fechaDesde" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="fechaHasta">Fecha Hasta:</label>
                    <input type="date" id="fechaHasta" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label for="nombreTramite">Nombre del Trámite:</label>
                    <input type="text" id="nombreTramite" class="form-control" placeholder="Nombre del Trámite" />
                </div>
                <div class="col-md-3">
                    <label for="nombreCliente">Nombre del Cliente:</label>
                    <input type="text" id="nombreCliente" class="form-control" placeholder="Nombre del Cliente" />
                </div>
            </div>

            <div class="row ">
                <div class="col-md-3 mb-3">
                    <label for="estado">Estado:</label>
                    <select id="estado" class="form-control">
                        <option value="">Todos</option>
                        <option value="Asignado">Asignado</option>
                        <option value="Aprobado">Aprobado</option>
                        <option value="Denegado">Denegado</option>
                        <option value="Unreachable">Unreachable</option>
                    </select>
                </div>
                <div class="col-md-3 align-self-end mb-3">
                    <button id="filtrar" class="btn btn-primary">
                        <i class="si-filter"></i>
                        <span class="ms-2">Filtrar</span>
                    </button>
                </div>
            </div>
        </div>
    </div>    

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tablaCasos" class="table table-striped table-bordered table-hovered w-100">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Fecha</th>
                            <th scope="col">Código</th>
                            <th scope="col">Cliente</th>
                            <th scope="col">Tipo Trámite</th>
                            <th scope="col">Nombre del Trámite</th>
                            <th scope="col">Estado</th>
                            <th scope="col">Evaluación</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Aquí se llenarán los datos -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Detalle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Aquí se cargará el contenido dinámico -->
                <p>Contenido cargado dinámicamente</p>
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>

    <script src="~/js/doctor.js?hash=@Html.Raw(Utils.RandomString())"></script>
}