@{
    ViewData["Title"] = "Reporte por periodo de casos";
}

@section Styles {
    <link href="https://cdn.datatables.net/1.12.1/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/buttons/2.2.3/css/buttons.bootstrap5.min.css" rel="stylesheet" />
}

<div class="py-3">
    <div class="card">
        <div class="card-header p-3 fs-4 fw-bold">ESTADO DE CASOS</div>
        <div class="card-body">
            <div class="row gy-4">
                <div class="col-form-label col-sm-2">Tipo de trámite</div>
                <div class="col-sm-10 col-md-4 col-lg-2">
                    <select id="tipo" class="form-select">
                        <option value="0">-- TODOS --</option>
                        <option value="1">Renovación de licencia</option>
                        <option value="2">Licencia de aprendizaje</option>
                        <option value="3">Duplicado de licencia</option>
                        <option value="4">Reciprocidad de Licencia</option>
                        <option value="5">Traspaso de Vehículos</option>
                    </select>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <button type="button" id="btnbuscar" class="btn btn-secondary me-2">
                        <i class="la la-search"></i>
                        <span>BUSCAR</span>
                    </button>
                    <button type="button" id="btnexportar" class="btn btn-success me-2">
                        <i class="la la-file-excel"></i>
                        <span>EXPORTAR</span>
                    </button>
                </div>
            </div>
            <div class="row py-4">
                <div class="col-sm-12 col-md-8">
                    <canvas id="summary-bar"></canvas>
                </div>
                <div class="col-sm-12 col-md-4">
                    <table id="table-summary" class="table table-striped table-hovered mb-3">
                        <thead>
                            <tr>
                                <th class="text-uppercase">Descripción</th>
                                <th class="text-uppercase">Total</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="d-flex flex-column">
                        <div class="d-flex flex-row mt-5 lead">
                            <span class="me-2 text-uppercase">Tramites sin procesar:</span>
                            <span id="info-sin-procesar">0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.12.1/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.3/js/buttons.print.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/reportes.js"></script>
    <script>
        $(document).ready(() => {
            reporte.rptPeriodo('#reporte')
        });
    </script>
}
