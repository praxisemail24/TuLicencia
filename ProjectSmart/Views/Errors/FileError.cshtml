@model Exception;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Error - Tu Licencia</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white">
    <div class="w-full min-h-screen flex items-center justify-center">
        <div class="m-auto w-[90%] lg:w-[50%] p-5 lg:p-10 flex flex-col items-center justify-center border rounded-xl shadow-lg">
            <div class="font-semibold text-red-500 text-xl uppercase text-center mb-3">Error en el archivo</div>
            <div class="text-lg text-center">@Model.Message</div>
            @if(Model.InnerException != null){
                <div class="text-gray-500 text-base text-center">@Model.InnerException.Message</div>
            }
            <button type="button" onclick="javascript: window.location.reload();" class="mt-4 bg-blue-500 hover:bg-blue-400 cursor-pointer px-4 py-2 rounded-lg border border-blue-600 hover:border-blue-500 text-white hover:text-gray-100">
                <span>Volver a intentar</span>
            </button>
        </div>
    </div>
</body>
</html>